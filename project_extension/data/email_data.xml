                <p>Dear ${object.user_id.name},</p>
                <p>Your project ${object.name} is one day overdue. Please take note.</p>
                <p>Best Regards,</p>
                <p>Administrator.</p>
            ]]>
            </field>
        </record>

        <!-- Project Closed -->
        <record id="project_closed" model="mail.template">
            <field name="name">Project: Closure</field>
            <field name="subject">Project Has Been Closed</field>
            <field name="email_from">babawaleolalekan@gmail.com</field>
            <field name="email_to">${object.user_id.partner_id.email_formatted}</field>
            <field name="auto_delete" eval="False" />
            <field name="model_id" ref="model_project_project" />
            <field name="body_html"><![CDATA[
                <p>Dear ${object.user_id.name},</p>
                <p>Your project ${object.name} has been closed.</p>
                <p>Best Regards,</p>
                <p>Administrator.</p>
            ]]>
            </field>
        </record>

    </data>
</odoo>
