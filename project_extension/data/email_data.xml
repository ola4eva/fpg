            <field name="body_html"><![CDATA[
                <p>Dear ${object.user_id.name},</p>
                <p>Your project ${object.name} has a deadline of a day from now. Please take note.</p>
                <p>Best Regards,</p>
                <p>Administrator.</p>
            ]]>
            </field>
        </record>

        <!-- Project 1 day overdue -->    
        <record id="project_one_day_overdue" model="mail.template">
            <field name="name">Project: One Day Overdue</field>
            <field name="subject">Project Is One Day Overdue</field>
            <field name="email_from">babawaleolalekan@gmail.com</field>
            <field name="email_to">${object.user_id.partner_id.email_formatted}</field>
