<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
    
        <record id="submit" model="mail.template">
            <field name="name">Duty Assumption Submission</field>
            <field name="subject">{{ object.employee_id.name }} Has Assumed Duty</field>
            <field name="email_from">{{ user.company_id.email }}</field>
            <field name="email_to">babawaleolalekan@gmail.com</field>
            <field name="model_id" ref="model_hr_duty_assumption_hr_duty_assumption" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Dear</p>
                    <p>The new hire has assumed duty</p>
                    <p>Best Regards,</p>
                    <p>Administrator.</p>
                </div>
            </field>
        </record>

        <record id="confirm" model="mail.template">
            <field name="name">Duty Assumption Submission</field>
            <field name="subject">{{ object.employee_id.name }} Has Assumed Duty</field>
            <field name="email_from">{{ user.company_id.email }}</field>
            <field name="email_to">babawaleolalekan@gmail.com</field>
            <field name="model_id" ref="model_hr_duty_assumption_hr_duty_assumption" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Dear</p>
                    <p>I hereby confirm that the new hire has assumed duty</p>
                    <p>Best Regards,</p>
                    <p>Administrator.</p>
                </div>
            </field>
        </record>

        <record id="approve" model="mail.template">
            <field name="name">Duty Assumption Submission</field>
            <field name="subject">{{ object.employee_id.name }} Has Assumed Duty</field>
            <field name="email_from">{{ user.company_id.email }}</field>
            <field name="email_to">babawaleolalekan@gmail.com</field>
            <field name="model_id" ref="model_hr_duty_assumption_hr_duty_assumption" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Dear</p>
                    <p>I hereby approve that the new hire has assumed duty</p>
                    <p>Best Regards,</p>
                    <p>Administrator.</p>
                </div>
            </field>
        </record>
    
    </data>

</odoo>
