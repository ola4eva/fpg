<odoo>
  <data>
    <record id="res_config_settings_view_form_fiscal_year" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.fiscal.year</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@data-key='crm']" position="inside">
          <h2>Fiscal Year</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <!-- <field name="group_use_recurring_revenues"/> -->
              </div>
              <div class="o_setting_right_pane">
                <label for="crm_year_last_month"/>
                <div>
                  <field name="crm_year_last_month" style="width: 100px; margin-right: 8px;"/> <field name="crm_year_last_day" class="oe_inline" />
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>